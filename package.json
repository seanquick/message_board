{
  "name": "message-board",
  "version": "1.0.1",
  "description": "Reddit-style discussion board",
  "main": "server.js",
  "type": "commonjs",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node server.js",
    "dev": "nodemon server.js",
    "smoke": "node scripts/smoke.mjs",
    "db:backup:ps": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts\\db-backup.ps1",
    "db:backup:bash": "bash scripts/db-backup.sh",
    "release:patch": "npm version patch -m \"release: v%s\" && git push && git push --tags",
    "release:minor": "npm version minor -m \"release: v%s\" && git push && git push --tags",
    "release:major": "npm version major -m \"release: v%s\" && git push && git push --tags"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.4.3",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.6",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.10"
  }
}
