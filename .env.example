# .env.example
# --- APP ---
PORT=3000
NODE_ENV=development

# --- Auth / Security ---
JWT_SECRET=replace-with-32+random-chars
CSRF_SECRET=replace-with-32+random-chars
ALLOW_PROMOTE=0

# --- Mongo ---
MONGO_URI=mongodb+srv://USERNAME:PASSWORD@CLUSTER/DBNAME?retryWrites=true&w=majority

# --- Email (optional) ---
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM="Your App <no-reply@example.com>"

# Email notifications toggles
SEND_REPORT_EMAILS=0
ADMIN_EMAILS=admin@example.com

# --- Seeding (optional convenience) ---
SEED_ADMIN_EMAIL=admin@example.com
SEED_ADMIN_NAME=Admin
SEED_ADMIN_PASSWORD=ChangeMe_Once
